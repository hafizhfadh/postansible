scope: percona_cluster
namespace: /db/
name: {{ inventory_hostname }}

etcd:
  hosts: 172.28.0.10:2379,172.28.0.11:2379,172.28.0.12:2379

postgresql:
  listen: 0.0.0.0:5432
  connect_address: {{ ansible_host }}:5432
  data_dir: /var/lib/postgresql/16/data
  bin_dir: /usr/pgsql-16/bin
  authentication:
    superuser:
      username: postgres
      password: "{{ vault_db_password }}"
    replication:
      username: replicator
      password: replicatorpassword

restapi:
  listen: 0.0.0.0:8008
  connect_address: {{ ansible_host }}:8008
